<h1>Admin Login</h1>

<% if flash[:alert] %>
  <p style="color:red;"><%= flash[:alert] %></p>
<% end %>

<%= form_with url: login_path, method: :post do |f| %>
  <p>
    <label>Email</label><br>
    <%= f.email_field :email %>
  </p>
  <p>
    <label>Password</label><br>
    <%= f.password_field :password %>
  </p>
  <%= f.submit "Login" %>
<% end %>

